mixin headerSondage(avecReseauxSociaux)

    header.entete-sondage.page-header.ng-cloak
        div(loader="sondageCharge")
        h1(ng-bind='sondage.name')
        p
            span.glyphicon.glyphicon-time
            | &nbsp;{{sondage.creationDate|date:'medium'}}
        p
            a(href="/polls/{{sondage.id}}/result") See poll result
        if avecReseauxSociaux
            .reseaux-sociaux
                a.buffer-add-button(href="http://bufferapp.com/add", data-count="horizontal") Buffer
                a.twitter-share-button(href="http://twitter.com/share", data-count="horizontal", data-lang="fr") tweet
                | <g:plusone size="medium"></g:plusone>
                | <div class="fb-like" data-colorscheme="light" data-layout="button_count" data-action="like" data-show-faces="false" data-send="false"></div>
